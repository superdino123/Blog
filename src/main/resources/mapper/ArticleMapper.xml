<?xml version="1.0" encoding="UTF-8"?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"    
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.example.demo.dao.ArticleDao">  
	<!--设置自定义类和数据库中表的字段一一对应，注意数据库字段和自定义类中的字段名称不一致，此处一定要建立对应关系！-->  
    <resultMap id="ResultMap" type="com.example.demo.entity.Article">  
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="createtime" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modifytime" property="modifyTime" jdbcType="TIMESTAMP" />
        <result column="content" property="content" jdbcType="VARCHAR" />
        <result column="readcount" property="readCount" jdbcType="BIGINT" />
    </resultMap>  
    
    <select id="selectArticleById" parameterType="int" resultMap="ResultMap">  
        SELECT * FROM di_article WHERE id = #{id}  
    </select>  
</mapper>
